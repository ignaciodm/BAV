<ScrollView 
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".NewAddressActivity"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#000000" >

		<LinearLayout 
	    	android:layout_width="fill_parent"
	    	android:layout_height="wrap_content"
	    	android:paddingBottom="@dimen/activity_vertical_margin"
	    	android:paddingLeft="@dimen/activity_horizontal_margin"
	    	android:paddingRight="@dimen/activity_horizontal_margin"
	    	android:paddingTop="@dimen/activity_vertical_margin"
	    	android:orientation="vertical" >
    
		    <EditText 
		        android:id="@+id/new_address_description"
		        android:hint="@string/new_address_description"
		        android:inputType="textCapSentences"
        		android:textStyle="bold"
		        android:textColor="@android:color/black"
		        android:layout_height="40dp"
		        android:layout_width="fill_parent"  
		        android:paddingLeft="10dp"
		        android:paddingRight="10dp"
		        android:layout_marginTop="10dp"
		        android:background="@drawable/background_edittext_top_redondeado" />
		    
		    <EditText 
		        android:id="@+id/new_address_street"
		        android:hint="@string/new_address_street"
		        android:inputType="textCapWords"
        		android:textStyle="bold"
		        android:textColor="@android:color/black"
		        android:layout_height="40dp"
		        android:layout_width="fill_parent"  
		        android:paddingLeft="10dp"
		        android:paddingRight="10dp"
		        android:layout_marginTop="10dp"
		        android:background="@drawable/background_edittext_cuadrado" />
		    
		    <LinearLayout
		    	android:layout_width="match_parent"
		    	android:layout_height="wrap_content"
		    	android:orientation="horizontal"
		        android:layout_marginTop="10dp"
		    	tools:context=".NewAddressActivity" >
		        
		        <EditText 
		        	android:id="@+id/new_address_street_number"
		        	android:hint="@string/new_address_street_number"
		       		android:textColor="@android:color/black"
		        	android:inputType="number"
        			android:textStyle="bold"
		        	android:layout_height="40dp"
		        	android:layout_width="0dp"
		        	android:layout_weight="0.4"
		        	android:paddingLeft="10dp"
		        	android:paddingRight="10dp"
		        	android:background="@drawable/background_edittext_cuadrado" />
		        	
		      	<EditText 
		        	android:id="@+id/new_address_street_piso"
		        	android:hint="@string/new_address_street_piso"
		      	  	android:textColor="@android:color/black"
		        	android:inputType="number"
        			android:textStyle="bold"
		        	android:layout_height="40dp"
		        	android:layout_width="0dp"
		        	android:layout_weight="0.3"
		        	android:layout_marginLeft="2dp"
		        	android:paddingLeft="10dp"
		        	android:paddingRight="10dp"
		        	android:background="@drawable/background_edittext_cuadrado" />
		        	
		        <EditText 
		        	android:id="@+id/new_address_street_dpto"
		        	android:hint="@string/new_address_street_dpto"
		       		android:textColor="@android:color/black"
		        	android:inputType="textCapSentences"
        			android:textStyle="bold"
		        	android:layout_height="40dp"
		        	android:layout_width="0dp"
		        	android:layout_weight="0.3"
		        	android:layout_marginLeft="2dp"
		        	android:paddingLeft="10dp"
		        	android:paddingRight="10dp"
		        	android:background="@drawable/background_edittext_cuadrado" />
		    	
		    </LinearLayout>
		    
		    <EditText 
		        android:id="@+id/new_address_entreCalle1"
		        android:hint="@string/new_address_entreCalle1"
		        android:inputType="textCapSentences"
        		android:textStyle="bold"
		        android:textColor="@android:color/black"
		        android:layout_height="40dp"
		        android:layout_width="fill_parent"  
		        android:paddingLeft="10dp"
		        android:paddingRight="10dp"
		        android:layout_marginTop="10dp"
		        android:background="@drawable/background_edittext_cuadrado" />
		    
		    <EditText 
		        android:id="@+id/new_address_entreCalle2"
		        android:hint="@string/new_address_entreCalle2"
		        android:inputType="textCapSentences"
        		android:textStyle="bold"
		        android:textColor="@android:color/black"
		        android:layout_height="40dp"
		        android:layout_width="fill_parent"  
		        android:paddingLeft="10dp"
		        android:paddingRight="10dp"
		        android:layout_marginTop="10dp"
		        android:background="@drawable/background_edittext_cuadrado" />
		        
		    <EditText 
		        android:id="@+id/new_address_provincia"
		        android:hint="@string/new_address_provincia"
		        android:inputType="textCapSentences"
        		android:textStyle="bold"
		        android:textColor="@android:color/black"
		        android:layout_height="40dp"
		        android:layout_width="fill_parent"  
		        android:paddingLeft="10dp"
		        android:paddingRight="10dp"
		        android:layout_marginTop="10dp"
		        android:clickable="false" 
	        	android:cursorVisible="false" 
	        	android:focusable="false" 
	        	android:focusableInTouchMode="false"
		        android:background="@drawable/background_edittext_cuadrado"
		        android:onClick="displayProvinces" />
		    
		     <EditText 
		     	android:id="@+id/new_address_partido"
		     	android:hint="@string/new_address_partido"
		        android:inputType="textCapSentences"
        		android:textStyle="bold"
		        android:textColor="@android:color/black"
		        android:layout_height="40dp"
		        android:layout_width="fill_parent"  
		        android:paddingLeft="10dp"
		        android:paddingRight="10dp"
		        android:layout_marginTop="10dp"
		        android:clickable="false" 
	        	android:cursorVisible="false" 
	        	android:focusable="false" 
	        	android:focusableInTouchMode="false"
		        android:background="@drawable/background_edittext_cuadrado"
		        android:onClick="displayPartidos" />
		     
		     <EditText 
		     	android:id="@+id/new_address_localidad"
		     	android:hint="@string/new_address_localidad"
		        android:inputType="textCapSentences"
        		android:textStyle="bold"
		        android:textColor="@android:color/black"
		        android:layout_height="40dp"
		        android:layout_width="fill_parent"  
		        android:paddingLeft="10dp"
		        android:paddingRight="10dp"
		        android:layout_marginTop="10dp"
		        android:clickable="false" 
	        	android:cursorVisible="false" 
	        	android:focusable="false" 
	        	android:focusableInTouchMode="false"
		        android:background="@drawable/background_edittext_cuadrado"
		        android:onClick="displayLocalidades" />
		     
		     <EditText 
		     	android:id="@+id/new_address_policeStation"
		     	android:hint="@string/new_address_policeStation"
		        android:inputType="textCapSentences"
        		android:textStyle="bold"
		        android:textColor="@android:color/black"
		        android:layout_height="40dp"
		        android:layout_width="fill_parent"  
		        android:paddingLeft="10dp"
		        android:paddingRight="10dp"
		        android:layout_marginTop="10dp"
		        android:clickable="false" 
	        	android:cursorVisible="false" 
	        	android:focusable="false" 
	        	android:focusableInTouchMode="false"
		        android:background="@drawable/background_edittext_bot_redondeado"
		        android:onClick="displayComisarias" />
	     
	</LinearLayout>

</ScrollView>