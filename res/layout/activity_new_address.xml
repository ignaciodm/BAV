<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical">
    <EditText android:id="@+id/address_description"
        android:layout_weight="1"
        android:layout_width="wrap_content"  
        android:layout_height="wrap_content"
        android:hint="@string/address_description" />
    
    <EditText android:id="@+id/address_street"
        android:layout_weight="1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="@string/address_street" />
    
    <EditText android:id="@+id/address_province"
        android:layout_weight="2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="@string/address_province"
        android:onClick="displayProvinces" />
    
     <EditText android:id="@+id/address_match"
         android:layout_weight="3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="@string/address_match"
        android:onClick="displayMatches" />
     
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/button_save_address"
        android:onClick="saveAddress" />
</LinearLayout>